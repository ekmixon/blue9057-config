#!/usr/bin/env python

import os
import shutil
import sys

SUPPORTED_TYPES = [
        'py',
        'c',
        'makefile',
        'pwn',
]

def main():

    if len(sys.argv) != 2:
        print(f"USAGE: {__file__} [filname]")
        quit()

    f_name = sys.argv[1]

    if f_name == 'Makefile':
        f_type = 'makefile'
    if f_name == 'pwn':
        f_name = 'exploit.py'
        f_type = 'pwn'
    else:
        f_type = f_name.split('.')[-1]

    if f_type not in SUPPORTED_TYPES:
        print(f"Type {f_type} is not supported.")
        print("Please refer to the following types")
        for types in SUPPORTED_TYPES:
            print(types)
        quit()


    script_path = os.path.dirname(os.path.abspath(__file__))

    from_path = f"{script_path}/template.{f_type}"
    to_path = f"{f_name}"
    ret = shutil.copyfile(from_path, to_path)
    print(ret)

if __name__ == '__main__':
    main()
